{
    "version": "2.0.0",
    "options": {
        "env": {
            "CMAKE_CXX_COMPILER": "g++-10",
        }
    },
    "tasks": [
        {
            "label": "build all",
            "type": "shell",
            "command": "make -j -C build/",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "_cmake_setup",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean all",
            "type": "shell",
            "command": "rm -rf build/",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "_cmake_setup",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=build -B build -S . \"-DCMAKE_TOOLCHAIN_FILE=vcpkg/scripts/buildsystems/vcpkg.cmake\"",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "_make_build_dirs",
            "type": "shell",
            "command": "mkdir -p build",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "_make_compile_commands_link",
            "type": "shell",
            "command": "rm compile_commands.json; ln -s build/compile_commands.json . 2> /dev/null || true",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}